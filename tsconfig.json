{
    "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node"]
    },
    "include": [
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue",
    "docs/.vitepress/**/*.d.ts"
    ],
    "exclude": [
    "node_modules",
    "dist",
    "docs/.vitepress/cache"
    ]
}
